{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$comment": "Copy this file to .claude/task-master.config.json in your project and customize",
  "qualityGate": {
    "lint": {
      "command": "pnpm lint",
      "required": true
    },
    "typecheck": {
      "command": "pnpm typecheck",
      "required": true
    },
    "tests": {
      "command": "pnpm test",
      "required": true
    },
    "coverage": {
      "command": "pnpm test:coverage",
      "threshold": 90,
      "required": false
    }
  }
}
